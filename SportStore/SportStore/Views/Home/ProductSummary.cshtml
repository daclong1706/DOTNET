@model Product

<div class="card card-outline-primary my-2 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge rounded-pill bg-primary text-white">
                <small>@Model.Price.ToString()</small>
            </span>
        </h4>
        <div class="card-text p-1">@Model.Description</div>
    </div>
</div>